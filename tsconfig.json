{
  "compilerOptions": {
    "target": "ES2021",                 // Output JS version
    "module": "CommonJS",               // Strapi backend dùng CommonJS
    "outDir": "dist",                    // Nơi chứa file .js sau khi build
    "rootDir": ".",                      // Thư mục gốc để compiler hiểu
    "strict": true,                      // Bật strict type-checking
    "esModuleInterop": true,             // Cho phép import default từ CommonJS
    "resolveJsonModule": true,           // Import file .json
    "skipLibCheck": true,                // Bỏ check type trong node_modules
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "scripts/**/*",
    "database.ts",
    "server.ts",
    "admin.ts",
    "plugins.ts",
    "middlewares.ts"
  ],
  "exclude": [
    "node_modules",
    "build",         // Admin panel build output
    "dist",          // Backend JS build output
    "**/*.test.ts"
  ]
}
